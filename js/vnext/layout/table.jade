include ./table-mixins.jade

- var tableStyle = 'border-collapse: collapse; margin: 0;';
- tableStyle += stickyHeader ? ' table-layout: fixed;' : '';

.table-container
  table.table.table-bordered.sticky-header(style=tableStyle + 'position: relative;')
    colgroup.column-group
    thead.header
  table.table.table-bordered(style=tableStyle)
    colgroup.column-group
    if !stickyHeader
      thead.header
    tbody
      tr.top-filler
    tbody.list-container
    tbody
      tr.bottom-filler
    tfoot

